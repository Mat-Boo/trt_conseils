{% extends 'base.html.twig' %}

{% block title %}Mon compte - TRT Conseils{% endblock %}

{% block content %}

<h1>Mon compte</h1>
<ul class="account-list d-flex justify-content-center">
    <li class="account-item m-4 rounded">
        <a href="{{ path('app_account_infos') }}" class="text-dark d-flex flex-column align-items-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-person-lines-fill" viewBox="0 0 16 16">
                <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm-5 6s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zM11 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5zm.5 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1h-4zm2 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2zm0 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2z"/>
            </svg>
            <span class="text-center mt-2">Mes informations de profil</span>
        </a>
    </li>
    {% if 'ROLE_CANDIDATE' in  app.user.roles %}
        <li class="account-item m-4 rounded">
            <a href="{{ path('app_account_applied_job_offers') }}" class="text-dark d-flex flex-column align-items-center">
                <img src="{{ asset('assets/img/job.png') }}" alt="job" height="32px">
                <span class="text-center mt-2">Offres d'emploi postul√©es</span>
            </a>
        </li>
    {% elseif 'ROLE_RECRUITER' in  app.user.roles %}
        <li class="account-item m-4 rounded">
            <a href="{{ path('app_account_job_offers') }}" class="text-dark d-flex flex-column align-items-center">
                <img src="{{ asset('assets/img/job-offer.png') }}" alt="job-offer" height="32px">
                <span class="text-center mt-2">Mes offres d'emploi</span>
            </a>
        </li>
    {% endif %}
</ul>
{% endblock %}
