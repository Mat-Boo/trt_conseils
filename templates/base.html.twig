<!doctype html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <title>{% block title %}TRT Conseils{% endblock %}</title>
        <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/style.css') }}" rel="stylesheet">
        <link rel="icon" href="/docs/5.2/assets/img/favicons/favicon.ico">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid d-flex">
                <a class="navbar-brand" href="{{ path('app_home') }}">TRT Conseils</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    {% if app.user %}
                        {% if ('ROLE_ADMIN' in app.user.roles) %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_admin') }}">Administration</a>
                            </li>
                        {% elseif ('ROLE_CONSULTANT' in app.user.roles) %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_consultant') }}">Accueil Consultant</a>
                            </li>
                        {% elseif ('ROLE_CANDIDATE' in app.user.roles) %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_candidate') }}">Accueil Candidat</a>
                            </li>
                        {% elseif ('ROLE_RECRUITER' in app.user.roles) %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_recruiter') }}">Accueil Recruteur</a>
                            </li>
                        {% endif %}

                        {% if ('ROLE_CANDIDATE' in app.user.roles) or ('ROLE_ADMIN' in app.user.roles) or ('ROLE_CONSULTANT' in app.user.roles) %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_job_offers') }}">Offres d'emploi</a>
                            </li>
                        {% elseif 'ROLE_RECRUITER' in app.user.roles %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_account_job_offers') }}">Mes offres d'emploi</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_account_job_offer_create') }}">Créer une offre d'emploi</a>
                            </li>
                        {% endif %}
                        {% if 'ROLE_CONSULTANT' in app.user.roles %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_recruiter_candidate', {'type': 'recruteur'}) }}">Recruteurs</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_recruiter_candidate', {'type': 'candidat'}) }}">Candidats</a>
                            </li>
                        {% endif %}
                    {% endif %}
                    </ul>
                    <div class="login_menu">
                        {% if app.user %}
                            <a href="{{ path('app_account') }}">Mon Compte <small>
                                {% if 'ROLE_CANDIDATE' in app.user.roles or 'ROLE_ADMIN' in app.user.roles or 'ROLE_CONSULTANT' in app.user.roles %}
                                    ({{ app.user.firstname }})
                                {% elseif 'ROLE_RECRUITER' in app.user.roles %}
                                    ({{ app.user.company }})
                                {% endif %}
                            </small></a>
                            | 
                            <a href="{{ path('app_logout') }}">Déconnexion</a>
                        {% else %}
                            <a href="{{ path('app_login') }}">Connexion</a>
                            | 
                            <a href="{{ path('app_register') }}">Inscription</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </nav>
        <main class="container">
            {% block content %}

            {% endblock %}
        </main>
        <footer class="py-2">
            <p>Créé par Mathieu Bouthors</p>
        </footer>
        {% block script %}
            
        {% endblock %}
        <script src="{{ asset('assets/js/jquery-3.6.0.min.js') }}"></script>
        <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
    </body>
</html>